 @model ProductsAndCategory.Models.Product
  @addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<html>
<head>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />
    <script src="~/bootstrap/js/bootstrap.bundle.js"></script>
    <title>Edit</title>
</head>
<body>
    <h2>Edit Product</h2>
    <form asp-action="Edit" method="post" class="form-check">
        <div>
            <input hidden asp-for="CategoryId" />
            <input hidden asp-for="ProductId" />

        </div>
        <div>
            <label asp-for="ProductName"> Product Name</label>
            <input asp-for="ProductName" />
        </div>
        <div class="mt-3">
            <label asp-for="ProductPrice"> Product Price</label>
            <input asp-for="ProductPrice" />
        </div>

        <div class="mt-3">
            <label asp-for="Category">Category</label>

            <select asp-for="CategoryId" asp-items="@ViewBag.Category">
                <option>
                    Select Category
                </option>
            </select>

        </div>
        <div class="mt-3">
            <input type="submit" value="Edit" class="btn btn-primary" />
            <input type="submit" value="Back To List" class="btn btn-dark" asp-action="Index" />

        </div>
    </form>
</body>
</html>