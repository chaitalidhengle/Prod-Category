  @model ProductsAndCategory.Models.Product
  @addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<html>
<head>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />
    <script src="~/bootstrap/js/bootstrap.bundle.js"></script>
    <title>Delete</title>
</head>
<body>
    <h2>Delete Category</h2>
    <form asp-action="Delete" method="post" class="form-check-label">
        <div>
            <input hidden asp-for="CategoryId" />
            <input hidden asp-for="ProductId" />

        </div>
        <div>
            <label asp-for="ProductName"> Product Name</label>
            <input asp-for="ProductName" readonly />
        </div>
        <div class="mt-3">
            <label asp-for="ProductPrice"> Product Price</label>
            <input asp-for="ProductPrice" readonly />
        </div>

        <div class="mt-3">
            <label asp-for="Category" >Category</label>

            <select asp-for="CategoryId" asp-items="@ViewBag.Category" disabled>
                <option>
                    Select Category
                </option>
            </select>

        </div>

        <div class="mt-3">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <input type="submit" value="Back to List" asp-action="Index" class="btn btn-dark"/>
        </div>
    </form>
</body>
</html>