 @model ProductsAndCategory.Models.Product
 @addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
 <html>
     <head>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />
    <script src="~/bootstrap/js/bootstrap.bundle.js"></script>

         <title>Create</title>
     </head>
     <body>
    <form asp-action="Create" method="post" class="form-check-label">
          <div>
            <label asp-for="ProductName"> Product Name</label>
            <input asp-for="ProductName" />
          </div>
        <div class="mt-3">
            <label asp-for="ProductPrice"> Product Price</label>
            <input asp-for="ProductPrice" />
        </div>

          <div class="mt-3">
              <label asp-for="Category">Category</label>
              
                  <select asp-for="CategoryId" asp-items="@ViewBag.Category">
                      <option>
                          Select Category
                      </option>
                  </select>
              
          </div>
          
             <div class="mt-3">
            <input type="submit" value="Save" class="btn btn-primary" />
              <a asp-action="Index" class="btn btn-dark">Back To List</a>
            </div>
          
         </form>
     </body>
 </html>